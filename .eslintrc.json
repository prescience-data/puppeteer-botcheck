{
  "parser":  "@typescript-eslint/parser",
  "extends": [
	"plugin:@typescript-eslint/recommended",
	"plugin:prettier/recommended",
	"prettier/@typescript-eslint"
  ],
  "plugins": [
	"@typescript-eslint",
	"prettier"
  ],
  "rules":   {
	"semi":                               [
	  "error",
	  "never"
	],
	"no-debugger":                        "off",
	"no-console":                         0,
	"@typescript-eslint/member-ordering": "error"
  }
}
